extends layout 

block content 
    h1 #{title} 

    form(method='POST' action='')
        div.form-group
            label(for=name) Brand: 
            input#name.form-name(type='text' name='name' value=(brand===undefined ? '' : brand.name))

        button.submit(type='submit') #{button_text}

    if errors 
        ul 
            for error in errors 
                li!= error.msg