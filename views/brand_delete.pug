extends layout 

block content 
    h1 #{title} 

    if brand_products.length 
        p You must first delete the following products: 

        ul 
            each product in brand_products 
                li 
                    a(href=product.url) #{product.name}
                    p #{product.category.name}
    
    else 
        p Are you sure you want to delete this brand?

        form(method='POST' action='')
            input#brandid(type='hidden' name='brandid' required='true' value=brand._id)
            button(type='submit') Delete
