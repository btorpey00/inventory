extends layout 

block content 
    h1 #{category.name}

    if category_products.length > 0
        for brand in all_brands 
            h2 Brand: #{brand.name}
            ul.detail-group
                for product in category_products 
                    if product.brand.name == brand.name
                        li.detail-item 
                            a(href=product.url) #{product.name}
    else 
        li The "#{category.name}" category contains no products

    a.link-button(href=category.url+'/update') Update Category
    a.link-button(href=category.url+'/delete') Delete Category