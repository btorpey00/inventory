extends layout 

block content 
    h1 #{title} 

    p #{product.description}
    p Number in Stock: #{product.quantity} 
    p Manufacturer: #{product.brand.name}
    p Category: #{product.category.name}

    a(href=product.url+'/update') <button>Update Product</button>
    a(href=product.url+'/delete') <button>Delete Product</button>