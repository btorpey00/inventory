extends layout 

block content 
    h1 #{title} 

    form(method='POST' action='')
        div.form-group
            label(for=name) Category: 
            input#name.form-name(type='text' name='name' value=(category===undefined ? '' : category.name))

        button.submit(type='submit') #{button_text} 

    if errors 
        ul 
            for error in errors 
                li!= error.msg