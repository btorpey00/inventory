extends layout 

block content 
    h1 #{title} 

    form(method='POST' action='')
        label(for=name) Category: 
        input#name(type='text' name='name' value=(category===undefined ? '' : category.name))

        button(type='submit') #{button_text} 

    if errors 
        ul 
            for error in errors 
                li!= error.msg